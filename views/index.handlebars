<div class="container">

    <div class="row">
        <div class="col-md-12">
            <img src="../public/assets/img/burger.png" alt="burger" class="img-responsive center-block">
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center header">Eat-Da-Burger</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <h3 class="uneaten">Uneaten Burgers</h3>
            {{#each burgers}}
            {{#unless this.devoured}}
            <div class="container">
                <div class="row">
                    <h4 class="uneaten-burgers col-md-4">{{this.id}}. {{this.burger_name}}</h4>
                    <div class="col-md-2">
                        <form action='burgers/update/{{this.id}}?_method=PUT' method='POST'>
                        <input type='hidden' name='devoured' value='true'>
                        <button type='submit' class="btn btn-danger">Devour!</button>
                        </form>
                    </div>
                </div>
            </div>  
            {{/unless}}
            {{/each}}
        </div>

        <div class="col-md-2"></div>

        <div class="col-md-5">
        <h3 class="eaten">Eaten Burgers</h3>
        {{#each burgers}}
        {{#if this.devoured}}
        <h4 class="text-muted eaten-burgers">{{this.id}}. {{this.burger_name}}</h4>
        {{/if}}
        {{/each}}
        </div>
    </div>

<br><br>

<div class="row">

<div class="col-md-12 text-center">
<form class="create-update-form" action="burgers/create" method="POST">
<div class="form-group">
<!-- <label for="bg">Burger Name:</label> -->
<h3 class="text-center">Enter a burger you want to eat and click Submit!</h3>
<textarea type="text" name="name"></textarea><br>
<button class="btn btn-primary" type="submit">Submit</button>
</div>
</form>
</div>

<!-- end fourth row -->
</div>

<!-- end bootstrap container -->
</div>